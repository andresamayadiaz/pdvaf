<div class="page-header">
  <%= link_to new_condicionesdepago_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Condicionesdepago
  <% end %>
  <h1>Listado condicionesdepagos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @condicionesdepagos) do |condicionesdepago| %>
            <td><%= condicionesdepago.nombre %></td>
            <td><%= link_to 'Show', condicionesdepago %></td>
        <td><%= link_to 'Edit', edit_condicionesdepago_path(condicionesdepago) %></td>
        <td><%= link_to 'Destroy', condicionesdepago, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
