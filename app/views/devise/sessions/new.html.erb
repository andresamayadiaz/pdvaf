<h2>Ingresar</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email, :autofocus => true, :label => 'Email', :input_html => { class: 'form-control' } %>
  <%= f.input :password, :label => 'Password', :input_html => {class: 'form-control'} %>
  <%= f.input :remember_me, :as => :boolean, :label => 'Recordarme', :input_html => {class: 'form-control'} if devise_mapping.rememberable? %>
  <%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
