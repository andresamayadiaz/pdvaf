<h2>Registro</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name, :autofocus => true, label: "Razon Social o Nombre Completo", input_html: { class: "form-control" } %>
  <%= f.input :email, :required => true, label: "Email", input_html: { class: "form-control" } %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true, label: "Confirmar Password" %>
  <hr>
  <%= f.button :submit, 'Registrarse', :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
