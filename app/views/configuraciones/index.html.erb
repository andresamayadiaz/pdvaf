<div class="page-header">
  <%= link_to new_configuracion_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Configuracion
  <% end %>
  <h1>Listado Configuraciones</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th>Valor</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @configuraciones) do |configuracion| %>
            <%= form_for(configuracion, :html => { :class => "form-inline" }) do |f| %>
              <%= f.hidden_field :nombre, :value => configuracion.nombre %>
              <td><%= configuracion.nombre %></td>
              <td><%= f.text_field :valor, :class => "form-control" %></td>
              <td><%= f.submit "Actualizar", :class => "btn btn-primary" %></td>
            <% end %>
      <% end %>
    </tbody>
  </table>
</div>
