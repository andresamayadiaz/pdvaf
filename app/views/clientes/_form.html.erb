      <%= collection_select(:cliente, :listadeprecio_id, @listadeprecios, :id, :nombre, {:prompt => false}, :class => "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
