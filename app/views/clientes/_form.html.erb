<%= form_for(@cliente, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @cliente.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@cliente.errors.count, "error") %> prohibited this cliente from being saved:</h4>

      <ul>
      <% @cliente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :rfc, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :rfc, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nombre, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :nombre, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telefono, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :telefono, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :noExterior, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :noExterior, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :noInterior, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :noInterior, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :calle, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
