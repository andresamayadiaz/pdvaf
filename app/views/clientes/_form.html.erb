    </div>
  </div>
  <div class="form-group">
    <%= f.label :colonia, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :colonia, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :municipio, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :municipio, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estado, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :estado, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pais, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :pais, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :codigoPostal, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :codigoPostal, :class => "form-control" %>
