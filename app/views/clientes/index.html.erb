<div class="page-header">
  <%= link_to new_cliente_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Cliente
  <% end %>
  <div class="pull-right">
	  <%= form_tag import_clientes_path, :multipart => true do %>
	    <%= file_field_tag :file %>
	    <%= submit_tag "Importar" %>
	  <% end %>
  </div>
  <h1>Clientes</h1>
  <div class="row">
	  <div class="col-md-6">
		  <%= form_tag clientes_path, :method => 'get' do |f| %>
		 	 <%= label_tag 'RFC o Nombre:', nil, class: ''  %>
			 <%= text_field_tag 'q', params[:q] %>
			  <%= hidden_field_tag 'search'  %>
			 <%= button_tag "Buscar", class: 'btn btn-default' %>
		  <% end %>
	  </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>RFC</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Noexterior</th>
            <th>Nointerior</th>
            <th>Calle</th>
            <th>Colonia</th>
            <th>Municipio</th>
            <th>Estado</th>
            <th>Pais</th>
            <th>Codigopostal</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @clientes) do |cliente| %>
            <td><%= cliente.rfc %></td>
            <td><%= cliente.nombre %></td>
            <td><%= cliente.email %></td>
            <td><%= cliente.noExterior %></td>
            <td><%= cliente.noInterior %></td>
            <td><%= cliente.calle %></td>
            <td><%= cliente.colonia %></td>
            <td><%= cliente.municipio %></td>
            <td><%= cliente.estado %></td>
            <td><%= cliente.pais %></td>
            <td><%= cliente.codigoPostal %></td>
            <td><%= link_to 'Ver', cliente, :class => "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente), :class => "btn btn-default" %></td>
        <td><%= link_to 'Eliminar', cliente, :class => "btn btn-danger", method: :delete, data: { confirm: 'Â¿Estas Seguro, esto eliminara todo lo relacionado?' } %></td>
      <% end %>
    </tbody>
  </table>
  <%= paginate @clientes %>
</div>
