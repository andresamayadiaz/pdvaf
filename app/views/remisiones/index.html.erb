<div class="page-header">
  <%= link_to new_remision_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Remision
  <% end %>
  <h1>Listado de Remisiones</h1>
  <div class="row">
	  <div class="col-md-6">
		  <%= form_tag remisiones_path, :method => 'get' do |f| %>
		 	 <%= label_tag 'Desde:', nil, class: ''  %>
			 <%= text_field_tag 'desde', params[:desde], class: 'datepicker' %>
			 <%= label_tag 'Hasta:', nil, class: ''  %>
			 <%= text_field_tag 'hasta', params[:hasta], class: 'datepicker' %>
			  <%= hidden_field_tag 'search'  %>
			 <%= button_tag "Buscar", class: 'btn btn-default' %>
		  <% end %>
	  </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Formasdepago</th>
            <th>Metodosdepago</th>
            <th>Subtotal</th>
            <th>Descuento</th>
            <th>Impuestos Trasladados</th>
            <th>Impuestos Retenidos</th>
            <th>Total</th>
            <th></th>
        	<th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @remisiones) do |remision| %>
            <td><%= remision.id %></td>
            <td><%= remision.cliente.nombre %></td>
            <td><%= remision.formasdepago.nombre %></td>
            <td><%= remision.metodosdepago.nombre %></td>
            <td class="text-right"><%= number_to_currency(remision.subtotal) %></td>
            <td class="text-right"><%= number_to_percentage(remision.descuento) %></td>
            <td class="text-right"><%= number_to_currency(remision.totalimpuestostrasladados) %></td>
            <td class="text-right"><%= number_to_currency(remision.totalimpuestosretenidos) %></td>
            <td class="text-right"><%= number_to_currency(remision.total) %></td>
            <td class="text-right"><%= link_to 'Show', remision %></td>
        	<td><%= link_to 'Destroy', remision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
  <%= paginate @remisiones, :params => params %>
</div>
<script>
$(document).ready(function() {
	$('.datepicker').datepicker({dateFormat: 'yy-mm-dd'});
});
</script>