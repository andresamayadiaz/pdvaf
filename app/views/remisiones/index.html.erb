<div class="page-header">
  <%= link_to new_remision_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Remision
  <% end %>
  <h1>Listado de Remisiones</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Formasdepago</th>
            <th>Metodosdepago</th>
            <th>Subtotal</th>
            <th>Descuento</th>
            <th>Total</th>
            <th>Impuestos Trasladados</th>
            <th>Impuestos Retenidos</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @remisiones) do |remision| %>
            <td><%= remision.id %></td>
            <td><%= remision.cliente.nombre %></td>
            <td><%= remision.formasdepago.nombre %></td>
            <td><%= remision.metodosdepago.nombre %></td>
            <td><%= remision.subtotal %></td>
            <td><%= remision.descuento %></td>
            <td><%= number_to_currency(remision.total) %></td>
            <td><%= number_to_currency(remision.totalimpuestosretenidos) %></td>
            <td><%= number_to_currency(remision.totalimpuestostrasladados) %></td>
            <td><%= link_to 'Show', remision %></td>
        <td><%= link_to 'Edit', edit_remision_path(remision) %></td>
        <td><%= link_to 'Destroy', remision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
