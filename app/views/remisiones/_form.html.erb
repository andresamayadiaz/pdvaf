  				<td class="col-lg-2"><%= text_field_tag "punit", nil, {:class => "form-control text-right"} %></td>
          <td class="col-lg-1"><%= text_field_tag "cantidad", nil, {:class => "form-control text-right"} %></td>
  				<td class="col-lg-2"><%= text_field_tag "unidad", nil, {:class => "form-control"} %></td>
          <td class="col-lg-2"><p class="lead text-right">$20,000.00</p></td>
  			</tr>
			</thead>
			<tbody id="conceptos">
			</tbody>
      <tbody id="totales">
        <tr>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
  				<td>&nbsp;</td>
          <td><strong>SubTotal</strong></td>
