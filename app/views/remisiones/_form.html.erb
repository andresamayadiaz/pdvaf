<%= form_for(@remision, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @remision.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@remision.errors.count, "error") %> prohibited this remision from being saved:</h4>

      <ul>
      <% @remision.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
	<div class="row">
		<div class="col-md-4">
            <img src="#" class="img-rounded logo">
			<address>
	        <strong>ACME, Inc.</strong><br>
	        P.O Box 3171<br>
	        Kent, WA 98089<br>
    	</address>
		</div>
		<div class="col-md-4 well">
			<table class="invoice-head">
				<tbody>
					<tr>
						<td class="pull-right"><strong>Cliente </strong></td>
						<td><%= collection_select(:remision, :cliente_id, @clientes, :id, :nombre, {:prompt => false}, :class => "form-control") %></td>
					</tr>
					<tr>
						<td class="pull-right"><strong>Forma de Pago </strong></td>
