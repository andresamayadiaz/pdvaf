<div class="page-header">
  <%= link_to remisiones_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Atras
  <% end %>
  <%= link_to edit_remision_path(@remision), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h1>Remisi√≥n #<%= @remision.id %></h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <img src="//placehold.it/170x40" class="img-rounded logo img-responsive">	<address>
			        <strong>ACME, Inc.</strong><br>
			        P.O Box 3171<br>
			        Kent, WA 98089<br>
		    	</address>

        </div>
        <div class="col-md-6 well">
            <table class="invoice-head">
                <tbody>
                    <tr>
                        <td class="pull-right"><strong>Cliente </strong>
                        </td>
                        <td><%= link_to @remision.cliente.nombre, cliente_path(@remision.cliente) %></td>
                    </tr>
                    <tr>
                        <td class="pull-right"><strong>Invoice #</strong>
                        </td>
                        <td>2340</td>
                    </tr>
                    <tr>
                        <td class="pull-right"><strong>Fecha </strong>
                        </td>
                        <td><%= @remision.created_at.to_s(:db) %></td>
                    </tr>
                    <tr>
                        <td class="pull-right"><strong>Period</strong>
                        </td>
                        <td>9/1/2103 - 9/30/2013</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            	<h2>Conceptos</h2>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12 well invoice-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>P. Unit.</th>
                        <th>Cantidad</th>
                    </tr>
                </thead>
                <tbody>
                <% @remision.conceptos.each do |concepto| %>
                    <tr>
                        <td><%= concepto.descripcion %></td>
                        <td><%= number_to_currency(concepto.valorunitario) %></td>
                        <td><%= concepto.cantidad %></td>
                    </tr>
                    <% end %>
                    <tr>
                        <td>&nbsp;</td>
                        <td><strong>Total</strong>
                        </td>
                        <td><strong>$1000.00</strong>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 well invoice-thank">
            	<h5 style="text-align:center;">Thank You!</h5>

        </div>
    </div>
    <div class="row">
        <div class="col-md-3"> <strong>Phone:</strong>  <a href="tel:555-555-5555">555-555-5555</a>

        </div>
        <div class="col-md-3"> <strong>Email:</strong>  <a href="mailto:hello@5marks.co">hello@bootply.com</a>

        </div>
        <div class="col-md-3"> <strong>Website:</strong>  <a href="http://5marks.co">http://bootply.com</a>

        </div>
    </div>
</div>


<hr />
<dl class="dl-horizontal">
  <dt>Cliente:</dt>
  <dd><%= @remision.cliente %></dd>

  <dt>Condicionesdepago:</dt>
  <dd><%= @remision.condicionesdepago %></dd>

  <dt>Formasdepago:</dt>
  <dd><%= @remision.formasdepago %></dd>

  <dt>Metodosdepago:</dt>
  <dd><%= @remision.metodosdepago %></dd>

  <dt>Subtotal:</dt>
  <dd><%= @remision.subtotal %></dd>

  <dt>Descuento:</dt>
  <dd><%= @remision.descuento %></dd>

  <dt>Total:</dt>
  <dd><%= @remision.total %></dd>

  <dt>Totalimpuestosretenidos:</dt>
  <dd><%= @remision.totalimpuestosretenidos %></dd>

  <dt>Totalimpuestostrasladados:</dt>
