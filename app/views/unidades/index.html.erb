<div class="page-header">
  <%= link_to new_unidad_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Unidad
  <% end %>
  <h1>Listing unidades</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @unidades) do |unidad| %>
            <td><%= unidad.nombre %></td>
            <td><%= link_to 'Show', unidad %></td>
        <td><%= link_to 'Edit', edit_unidad_path(unidad) %></td>
        <td><%= link_to 'Destroy', unidad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
  <%= paginate @unidades %>
</div>
