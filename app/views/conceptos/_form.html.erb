<%= form_for(@concepto, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @concepto.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@concepto.errors.count, "error") %> prohibited this concepto from being saved:</h4>

      <ul>
      <% @concepto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :cantidad, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :cantidad, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :unidad, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :unidad, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descripcion, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :descripcion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :valorUnitario, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :valorUnitario, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :importe, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :importe, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
